<div class="index-pages-wrapper">
  <div class="container">
    <div class="row">
      <h3 class="col-md-6 col-md-offset-3 text-center login-head">ユーザー登録</h3>
      <%= form_for @user do |f| %>
        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :ユーザーネーム, class: 'text-white' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :メールアドレス, class: 'text-white' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :パスワード, class: 'text-white' %>
          <em>(半角英数字をそれぞれ1種類以上含む8文字以上32文字以下)</em>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :パスワード確認, class: 'text-white' %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>

        <%= f.submit "登録", class: 'btn btn-default col-xs-4 col-xs-offset-4 col-md-2 col-md-offset-5' %>
      <% end %>
    </div>
  </div>
</div>
