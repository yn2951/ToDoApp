<div class="index-pages-wrapper">
  <div class="container">
    <div class="row">
      <h3 class="col-md-6 col-md-offset-3 text-center login-head">ログイン</h3>
      <%= form_for :session, url: login_path do |f| %>
        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :メールアドレス, class: 'text-white' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group col-md-6 col-md-offset-3">
          <%= f.label :パスワード, class: 'text-white' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <%= f.submit "ログイン", class: 'btn btn-default col-xs-4 col-xs-offset-4 col-md-2 col-md-offset-5' %>
      <% end %>
    </div>
  </div>
</div>
